<div class='nested-fields'>
  <br>
  <b>Projects #</b>
  <hr>
  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :tech_stack, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :tech_stack, class: "form-control" %>
    </div>
  </div>

  <br>
  <div class="form-group">
    <%= f.label :link, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :link, class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :content, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>

  <br>

  <%= link_to_remove_association "Remove Project", f, class: "btn btn-danger" %>
  <hr>
</div>
