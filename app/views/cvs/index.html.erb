<div class="index">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th colspan="3" style="text-align:center">Option</th>
            </tr>
          </thead>
        
          <tbody>
            <% @cvs.each do |cv| %>
              <tr>
                <td><%= cv.name %></td>
                <td><%= cv.email %></td>
                <td><%= link_to "Show", cv, class: "btn btn-default" %></td>
                <td><%= link_to "PDF", cv_path(cv, format: :pdf), class: "btn btn-default" %></td>
                <td><%= link_to "Edit", edit_cv_path(cv), class: "btn btn-default" %></td>
                <td><%= link_to "Delete", cv, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <br>
    <%= link_to "Create New CV", new_cv_path, class: "btn btn-primary" %>
  </div>
  
</div>
